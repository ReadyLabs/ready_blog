#sign_in_form
  %h2 SIGN IN
  = simple_form_for(:user, :url => new_user_session_path) do |f|
    = f.input :email
    = f.input :password
    = f.button :submit

  = link_to "Forgot your password?", new_user_password_path

- if user_signed_in?
  = link_to t('posts.new'), new_post_path
  = link_to t('posts.browse'), user_posts_path(current_user)

#sign_up_form
  %h2 SIGN UP
  =simple_form_for(User.new, :url => user_registration_path) do |f|
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.button :submit#, 'Sign Up'
