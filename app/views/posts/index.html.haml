- @posts.each do |post|
  .post
    %h2 #{post.title}
    %p #{post.body}
    = link_to t('posts.show'), post_path(post)
  .post_status
    - if post.published
      %p This post is published.
    - else
      = link_to('Publish This Post', post_path(post, published: 1), method: :put, confirm: 'Are you sure?')
